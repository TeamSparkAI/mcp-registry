{
	"name": "toolcatalog",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "pnpm -F mcp-registry-validator build && pnpm -F mcp-registry-server build && next dev --turbo",
		"build": "pnpm -F mcp-registry-validator build && pnpm -F mcp-registry-server build && next build",
		"catalog:build": "tsx scripts/catalog/index.ts",
		"catalog:build:debug": "tsx scripts/catalog/index.ts --debug",
		"registry:download": "tsx scripts/registry/download-registry.ts",
		"registry:validate": "tsx scripts/registry/validate-registry.ts",
		"registry:docs": "pnpm -F mcp-registry-validator docs",
		"linter:docs": "pnpm -F mcp-registry-validator docs"
	},
	"dependencies": {
		"mcp-registry-validator": "workspace:*",
		"mcp-registry-server": "workspace:*",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"next": "^15.1.7",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	},
	"devDependencies": {
		"@octokit/rest": "^22.0.0",
		"@types/node": "^22.16.0",
		"@types/react": "^19.0.8",
		"@types/react-dom": "^19.0.3",
		"autoprefixer": "^10.4.21",
		"dotenv": "^16.4.5",
		"json5": "^2.2.3",
		"node-fetch": "^3.3.2",
		"postcss": "^8.4.31",
		"tailwindcss": "^3.4.17",
		"tsx": "^4.20.3",
		"typescript": "^5.7.3"
	}
}