{
  "name": "@teamsparkai/mcp-registry-validator",
  "version": "1.0.5",
  "description": "MCP Server Registry Validator - Schema validation and linting for MCP server registry entries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/browser.js",
  "bin": {
    "mcp-validate": "./bin/mcp-validate"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "linter.md"
  ],
  "scripts": {
    "prebuild": "node scripts/bundle-schemas.js",
    "build": "tsc && tsc src/browser.ts --outDir dist --target ES2020 --module commonjs --declaration && cp src/schema/all-schemas.json dist/schema/",
    "dev": "tsx src/cli.ts",
    "test": "echo \"No tests yet\"",
    "prepublishOnly": "pnpm build",
    "prepack": "pnpm build",
    "docs": "tsx scripts/generate-linter-docs.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "validation",
    "schema",
    "linting",
    "registry"
  ],
  "author": "TeamSpark AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TeamSparkAI/mcp-registry.git",
    "directory": "packages/mcp-registry-validator"
  },
  "homepage": "https://github.com/TeamSparkAI/mcp-registry/tree/main/packages/mcp-registry-validator",
  "bugs": {
    "url": "https://github.com/TeamSparkAI/mcp-registry/issues"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
